{
  "manifest_version": 3,
  "name": "Buzz",
  "version": "1.3",
  "description": "A simple extension that generates a short quizz based on the content of your current tab then saves it to your local storage.",
  "action": {
    "default_popup": "index.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
